<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemDescription">


    <TextView
        android:id="@+id/item_name_ind"
        android:textColor="#757575"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textStyle="bold"
        android:text="Item name"
        android:textSize="48dp" />
    <TextView
        android:id="@+id/date_ind_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lost Date:"
        android:layout_below="@+id/item_name_ind"
        android:padding="16dp"
        android:textSize="32dp"/>


    <TextView
        android:id="@+id/date_ind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="info"
        android:textStyle="italic"
        android:layout_below="@+id/date_ind_header"
        android:padding="16dp"
        android:textSize="32dp"/>

    <TextView
        android:id="@+id/email_ind_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:layout_below="@+id/date_ind"
        android:padding="16dp"
        android:textSize="32dp"/>

    <TextView
        android:onClick="openGmail"
        android:autoLink="email"
        android:id="@+id/email_ind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="info"
        android:textStyle="italic"
        android:layout_below="@+id/email_ind_header"
        android:padding="16dp"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/uploader_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number:"
        android:layout_below="@+id/email_ind"
        android:textSize="32dp"
        android:padding="16dp"/>

    <TextView
        android:linksClickable="true"
        android:autoLink="phone"
        android:onClick="openDialer"
        android:id="@+id/number_ind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="info"
        android:textStyle="italic"
        android:layout_below="@+id/uploader_text"
        android:textSize="24dp"
        android:padding="16dp"/>
    <ImageView
        android:layout_margin="32dp"
        android:layout_below="@id/number_ind"
        android:id="@+id/image_view_upload"
        android:layout_width="match_parent"
        android:layout_height="200dp" />




</RelativeLayout>